<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    >
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/install_fannel_recycler"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:textIsSelectable="true"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:stackFromBottom="true"
        android:layout_weight="1"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/install_fannel_search_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="#00000000"
        android:hint="install fannel search"
        android:textSize="20sp"
        android:autofillHints=""
        android:inputType="text" />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/install_fannel_bottom_linearlayuout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="@color/setting_menu_footer"
        >
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/install_fannel_sync_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/icons8_update"
            app:tint="@color/cmdclick_text_black"
            android:backgroundTint="@color/setting_menu_footer"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            />
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/install_fannel_cancel_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/icons8_cancel"
            app:tint="@color/cmdclick_text_black"
            android:backgroundTint="@color/setting_menu_footer"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>