<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

    </data>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/cmdclick_page_search_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_layout_height"
            android:orientation="horizontal"
            android:weightSum="1"
            android:visibility="gone"
            >
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/cmd_page_search_edit_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="@string/page_search"
                android:text=""
                android:textColorHighlight ="@color/edit_text_selected_color"
                android:textCursorDrawable="@null"
                android:autofillHints=""
                android:selectAllOnFocus="true"
                android:layout_weight="0.56"
                android:background="@null"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:maxLines="1"
                android:inputType="text" />
            <!--                        style="?android:attr/borderlessButtonStyle"-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cmdindex_search_total"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="13sp"
                android:textStyle="bold"
                android:text="0/0"
                android:textColor="@color/fill_gray"
                android:layout_weight="0.11" />

            <FrameLayout
                android:id="@+id/cmdindex_search_down_allow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:foreground="?selectableItemBackground"
                android:layout_weight="0.11"
                android:layout_margin="@dimen/toolbar_button_horizon_margin"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/cmdindex_search_down_allow_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_top_allow"
                    android:backgroundTint="@color/white"
                    app:tint="@color/file_dark_green_color"
                    android:scaleType="fitCenter"
                    android:padding="0dp"
                    android:layout_gravity="center"
                    />
                <com.puutaro.commandclick.custom_view.OutlineTextView
                    android:id="@+id/cmdindex_search_down_allow_caption"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:textSize="@dimen/toolbar_caption_font_size"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="nxt"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/cmdindex_search_top_allow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:foreground="?selectableItemBackground"
                android:layout_weight="0.11"
                android:layout_margin="@dimen/toolbar_button_horizon_margin"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/cmdindex_search_top_allow_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_top_allow"
                    android:backgroundTint="@color/white"
                    app:tint="@color/file_dark_green_color"
                    android:scaleType="fitCenter"
                    android:padding="0dp"
                    android:layout_gravity="center"
                    />
                <com.puutaro.commandclick.custom_view.OutlineTextView
                    android:id="@+id/cmdindex_search_top_allow_caption"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:textSize="@dimen/toolbar_caption_font_size"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="prv"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/cmdindex_search_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:foreground="?selectableItemBackground"
                android:layout_weight="0.11"
                android:layout_margin="@dimen/toolbar_button_horizon_margin"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/cmdindex_search_cancel_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/icons8_cancel"
                    android:backgroundTint="@color/white"
                    app:tint="@color/file_dark_green_color"
                    android:scaleType="fitCenter"
                    android:padding="0dp"
                    android:layout_gravity="center"
                    />
                <com.puutaro.commandclick.custom_view.OutlineTextView
                    android:id="@+id/cmdindex_search_cancel_caption"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:textSize="@dimen/toolbar_caption_font_size"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="exit"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
            </FrameLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
