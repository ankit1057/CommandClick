<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

    </data>
    <android.widget.Toolbar
        android:id="@+id/cmdclick_page_search_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:contentInsetEnd="0dp"
        android:contentInsetStart="0dp"
        android:focusableInTouchMode="true"
        android:backgroundTint="@color/white"
        >
        <LinearLayout
            android:id="@+id/cmdindex_page_search_toolbar_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <EditText
                android:id="@+id/cmd_page_search_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/page_search"
                android:text=""
                android:textColorHighlight ="@color/edit_text_selected_color"
                android:textCursorDrawable="@null"
                android:autofillHints=""
                android:selectAllOnFocus="true"
                android:layout_weight="0.56"
                android:background="@null"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:maxLines="1"
                android:inputType="text" />
            <!--                        style="?android:attr/borderlessButtonStyle"-->
            <TextView
                android:id="@+id/cmdindex_search_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:clickable="false"
                android:textSize="12sp"
                android:text="0/0"
                android:textColor="@color/black"
                android:layout_weight="0.11" />
            <ImageButton
                android:id="@+id/cmdindex_search_down_allow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_down_allow"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:contentDescription="@string/setting"
                android:layout_weight="0.11"
                app:tint="@color/terminal_color"
                />
            <ImageButton
                android:id="@+id/cmdindex_search_top_allow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_top_allow"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:contentDescription="@string/setting"
                android:layout_weight="0.11"
                app:tint="@color/terminal_color"
                />
            <ImageButton
                android:id="@+id/cmdindex_search_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icons8_close"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:contentDescription="@string/setting"
                android:layout_weight="0.11"
                app:tint="@color/terminal_color"
                />
        </LinearLayout>
    </android.widget.Toolbar>
</layout>
