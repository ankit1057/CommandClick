<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:weightSum="1"
    >
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/drag_sort_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:transcriptMode="alwaysScroll"
        android:stackFromBottom="true"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:paddingTop="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="23sp"
        android:textColor="@color/cmdclick_text_black"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/drag_sort_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:transcriptMode="alwaysScroll"
        android:stackFromBottom="true"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textSize="21sp"
        android:textColor="@color/cmdclick_text_black"
        android:visibility="gone"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/drag_sort_dialog_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:transcriptMode="alwaysScroll"
        android:stackFromBottom="true"
        android:paddingTop="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:listSelector="@android:color/transparent"
        android:layout_marginBottom="10dp"
        />
    <!--
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="10dp"
    android:stretchMode="columnWidth"
            android:verticalSpacing="-1dp"
            android:horizontalSpacing="-1dp"-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/drag_sort_dialog_bottom_linear"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/setting_menu_footer"
        >
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/drag_sort_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/icons8_cancel"
            app:tint="@color/cmdclick_text_black"
            android:backgroundTint="@color/setting_menu_footer"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            />
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/drag_sort_dialog_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/icons8_check_ok"
            app:tint="@color/cmdclick_text_black"
            android:backgroundTint="@color/setting_menu_footer"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>