<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="0.6"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/command_index_fragment"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="0dp"
        tools:context="com.puutaro.commandclick.fragment.CommandIndexFragment">
        <com.omadahealth.github.swipyrefreshlayout.library.SwipyRefreshLayout
            android:id="@+id/cmd_list_swipe_to_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingHorizontal="@dimen/cmdclick_layout_marginHorizontal"
            android:layout_above="@+id/cmdindex_all_toolbar_linear_layout"
            app:srl_direction="both"
            >
            <ListView
                android:id="@+id/cmd_list"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textIsSelectable="true"
                android:transcriptMode="alwaysScroll"
                android:stackFromBottom="true"
                />
        </com.omadahealth.github.swipyrefreshlayout.library.SwipyRefreshLayout>

        <LinearLayout
            android:id="@+id/cmdindex_all_toolbar_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:weightSum="1">
            <android.widget.Toolbar
                android:id="@+id/cmdclick_page_search_tool_bar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:contentInsetEnd="0dp"
                android:contentInsetStart="0dp"
                android:focusableInTouchMode="true"
                android:backgroundTint="@color/white"
                android:layout_weight="0"
                >
                <LinearLayout
                    android:id="@+id/cmdindex_page_search_toolbar_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <EditText
                        android:id="@+id/cmd_page_search_edit_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/page_search"
                        android:text=""
                        android:textColorHighlight ="@color/edit_text_selected_color"
                        android:textCursorDrawable="@null"
                        android:autofillHints=""
                        android:selectAllOnFocus="true"
                        android:layout_weight="0.56"
                        android:background="@null"
                        android:layout_gravity="center"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:maxLines="1"
                        android:inputType="text" />
                    <!--                        style="?android:attr/borderlessButtonStyle"-->
                    <TextView
                        android:id="@+id/cmdindex_search_total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:layout_gravity="center"
                        android:clickable="false"
                        android:textSize="12sp"
                        android:text="0/0"
                        android:textColor="@color/black"
                        android:layout_weight="0.11" />
                    <ImageButton
                        android:id="@+id/cmdindex_search_down_allow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_down_allow"
                        android:backgroundTint="@color/white"
                        android:layout_gravity="center"
                        android:contentDescription="@string/setting"
                        android:layout_weight="0.11"/>
                    <ImageButton
                        android:id="@+id/cmdindex_search_top_allow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_top_allow"
                        android:backgroundTint="@color/white"
                        android:layout_gravity="center"
                        android:contentDescription="@string/setting"
                        android:layout_weight="0.11"/>
                    <ImageButton
                        android:id="@+id/cmdindex_search_cancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icons8_close"
                        android:backgroundTint="@color/white"
                        android:layout_gravity="center"
                        android:contentDescription="@string/setting"
                        android:layout_weight="0.11"/>
                </LinearLayout>
            </android.widget.Toolbar>

        <android.widget.Toolbar
            android:id="@+id/cmdclick_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:contentInsetEnd="0dp"
            android:contentInsetStart="0dp"
            android:focusableInTouchMode="true"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            >
            <LinearLayout
                android:id="@+id/cmdindex_toolbar_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageButton
                    android:id="@+id/cmdindex_history_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icons8_history"
                    android:contentDescription="@string/history"
                    android:backgroundTint="@color/white"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"/>

                <ImageButton
                    android:id="@+id/cmdindex_internet_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_terminal"
                    app:tint="@color/black"
                    android:backgroundTint="@color/gray_out"
                    android:layout_gravity="center"
                    android:enabled="false"
                    android:contentDescription="@string/setting"
                    android:layout_weight="0.1"/>
                <AutoCompleteTextView
                    android:id="@+id/cmd_search_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@null"
                    android:text=""
                    android:textColorHighlight ="@color/edit_text_selected_color"
                    android:textCursorDrawable="@null"
                    android:autofillHints=""
                    android:selectAllOnFocus="true"
                    android:layout_weight="0.5"
                    android:background="@null"
                    android:layout_gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:maxLines="1"
                    android:inputType="text" />
                <ImageButton
                    android:id="@+id/cmdindex_setting_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icons8_setting"
                    android:backgroundTint="@color/white"
                    android:layout_gravity="center"
                    android:contentDescription="@string/setting"
                    android:layout_weight="0.2"/>
            </LinearLayout>
        </android.widget.Toolbar>
        </LinearLayout>

    </RelativeLayout>
</layout>