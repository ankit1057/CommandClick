<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="310dp"
    android:layout_margin="1dp"
    card_view:cardElevation="2dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:backgroundTint="@color/file_dark_green_color"
    >
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/url_history_adapter_relative_layout"
            android:layout_width="wrap_content"
            android:layout_height="270dp"
            android:padding="0dp"
            android:layout_margin="0dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/url_history_adapter_capture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:adjustViewBounds="true"
                />
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/url_history_adapter_title_linear"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/url_history_adapter_title_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:padding="0dp"
                    android:src="@drawable/internet"
                    app:tint="@color/web_icon_color"
                    />
                <com.puutaro.commandclick.custom_view.OutlineTextView
                    android:id="@+id/url_history_adapter_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="center_vertical"
                    android:foregroundGravity="bottom"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </RelativeLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/url_history_adapter_bottom_linear"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/file_dark_green_color"
            app:tint="@color/white"
            android:weightSum="1"
            >
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/url_history_adapter_copy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_copy"
                android:backgroundTint="@color/file_dark_green_color"
                app:tint="@color/white"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                />
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/url_history_adapter_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/icons8_cancel"
                app:tint="@color/white"
                android:backgroundTint="@color/file_dark_green_color"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</com.google.android.material.card.MaterialCardView>
